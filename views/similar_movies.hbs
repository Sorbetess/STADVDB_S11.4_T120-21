<div class="container">
  <h2>{{ title }}</h2>
  <br>

  <div id="form">

    <form name="movie_title" id="movie_title" method="post">

      <label for="title">Movie Title:</label>
      <input type="text" id="title" name="title" onkeydown="pressedEnter(event)">
      <input type="hidden" name = "page" value = '1'>

      <button onclick="submit()">Search</button>

    </form>

  </div>

  {{#if isResults}}
    <div class="row">
      <div class="title col-1">
      </div>
      <div class="title col-6">
        <p>Title</p>
      </div>
      <div class="title col-5">
        <p>Keywords</p>
      </div>
    </div>
  {{/if}}

  {{#each movies}}
    <div class="row">
      <div class="title center col-1">
        <p>{{inc @index}}</p>
      </div>
      <div class="col-6">
        <div class="title">{{title}}</div>
      </div>
      <div class="col-5">
        <p>{{keywords}}</p>
      </div>
    </div>
    <hr>
  {{/each}}

</div>