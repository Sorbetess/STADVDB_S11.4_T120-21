<div class="container">
  <h2>{{ title }}</h2>
  <br>

  <div id="form">

    <form name="movie_keywords" id="movie_keywordsd" method="post">

      <label for="keyword">Movie Keyword:</label>
      <input type="text" id="keyword" name="keyword" onkeydown="pressedEnter(event)">
      <input type="hidden" name="page" value='1'>

      <button onclick="submit()">Search</button>

    </form>

  </div>

  <br>

  {{#if isResults}}
  <div class="row">
    <div class="title col-1">
    </div>
    <div class="title col-6">
      <p>Title</p>
    </div>
    <div class="title col-5">
      <p>Rating</p>
    </div>
  </div>
  {{/if}}

  {{#each movies}}
  <div class="row">
    <div class="title center col-1">
      <p>{{page @index ../offset}}</p>
    </div>
    <div class="col-6">
      <div class="title">{{title}}</div>
    </div>
    <div class="col-5">
      <p>{{round}}
        ({{count}} users)
      </p>
    </div>
  </div>
  <hr>
  {{/each}}

  <div id={{offset}}></div>

</div>