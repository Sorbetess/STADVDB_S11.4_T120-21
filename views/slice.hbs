<div class="container">
  <h2>{{ title }}</h2>
  <br>

  <div id="form">

    <form name="year" id="year" method="post">

      <label for="year">Year:</label>

      <select id="year" name="year">

        {{#each years}}
        <option value={{year}}>{{year}}</option>
        {{/each}}

      </select>
      <!--<input type="hidden" name="page" value='1'>-->

      <button onclick="submit()">Search</button>
    </form>

  </div>

  <br>

  {{#if isResults}}
  <p> If a result is "N/A", it means the information is unavailable. </p>
  <div class="row">
    <div class="title col-2">
      <p>Quarter</p>
    </div>
    <div class="title col-6">
      <p>Company</p>
    </div>
    <div class="title col-4">
      <p>Total Revenue</p>
    </div>
  </div>
  {{/if}}

  {{#each results}}
  <div class="row">
    <div class="title col-2">
      <p>{{quarter}}</p>
    </div>
    <div class="col-6">
      <div class="title">
        <p>{{company}}</p>
      </div>
    </div>
    <div class="col-4">
      <p>{{tomoney total_revenue}}</p>
    </div>
  </div>
  <hr>
  {{/each}}

  {{!-- <div id={{offset}}></div> --}}

</div>