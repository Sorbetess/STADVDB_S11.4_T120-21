<div class="container">
  <h2>{{ title }}</h2>
  <br>

  <div id="form">

    <form name="year" id="year" method="post">

      <label for="year">Year:</label>

      <select id="year" name="year">

        {{#each years}}
        <option value={{year}}>{{year}}</option>
        {{/each}}

      </select>
      <!--<input type="hidden" name="page" value='1'>-->

      <button onclick="submit()">Search</button>
    </form>

  </div>

  <br>

  {{#if isResults}}
  
    <div class="row">
      <div class="title col-1">
      </div>
      <div class="title col-6">
        <p>Company</p>
      </div>
      <div class="title col-5">
        <p>Total Revenue</p>
      </div>
    </div>
  {{/if}}

  {{#each results}}
  <div class="row">
    {{!-- <div class="title center col-1">
      <p>{{page @index ../offset}}</p>
    </div> --}}
    <div class="col-6">
      <div class="title">{{company}}</div>
      {{!-- <div class="timestamp">
        <p>{{todate release_date}}</p>
      </div> --}}
    </div>
    <div class="col-5">
      <p>{{tomoney total_revenue}}</p>
    </div>
  </div>
  <hr>
  {{/each}}

  {{!-- <div id={{offset}}></div> --}}

</div>